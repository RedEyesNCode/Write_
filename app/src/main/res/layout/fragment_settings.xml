<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".dashboard.settings.SettingsFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_85sdp"
        android:src="@drawable/git_profile"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_above="@id/tv_splashtext"
        android:layout_centerHorizontal="true"

        android:layout_height="@dimen/_85sdp"/>

    <TextView
        android:id="@+id/tv_splashtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:fontFamily="@font/ibmplexmono_semibold"
        android:text="@string/main_app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_35sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_createdBy"
        android:text="@string/comming_soon"
        android:textSize="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ibmplexmono_semibold"
        android:layout_height="wrap_content"/>


</RelativeLayout>